{
  "expo": {
    "name": "CipherLink",
    "slug": "cipherlink",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "cipherlink",
    "icon": "./assets/icon.png",
    "platforms": ["ios", "android"],
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cipherlink.app"
    },
    "android": {
      "package": "com.cipherlink.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a1a"
      }
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a1a"
    }
  }
}
